varnishtest "our first agent and specification block"

# here we define the specification
server s1 {
	# receive request
	rxreq
	# transmit response
	txresp -status 200 -hdr "beep: boop" 
}

# note that this above doesn't actually start the server, it mereley defines it
server s1 -start

# then, we can ask s1 to wait, and the call will only return once the scenario is
server s1 -wait
